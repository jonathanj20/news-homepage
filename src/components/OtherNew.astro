---
interface Props {
	image: string;
	number: number;
	title: string;
	description: string;
}

const { image, number, title, description } = Astro.props;
---

<div class="othernew">
	<img src={image} alt="image" class="othernew__image" />
	<div class="information">
		<p class="othernew__number">{'0' + number.toString()}</p>
		<h3 class="othernew__title">{title}</h3>
		<p class="othernew__description">{description}</p>
	</div>
</div>

<style>
	.othernew {
		display: flex;
		gap: 10px;
	}

	.othernew__image {
		width: 110px;
		height: 100%;
	}

	.information {
		display: flex;
		flex-direction: column;
		gap: 5%;
	}

	.othernew__number {
		color: var(--soft-red);
		font-size: 40px;
		font-weight: 700;
	}

	.othernew__title {
		font-weight: bold;
		transition: all 0.5s;
	}

	.othernew__title:hover {
		color: var(--soft-red);
		cursor: pointer;
	}

	.othernew__description {
		color: var(--dark-grayish-blue);
	}

	.othernew__description,
	.othernew__title,
	.othernew__number {
		margin: 0;
	}

	@media screen and (width => 1024px) {
		.othernew {
			width: 355px;
		}
	}
</style>
